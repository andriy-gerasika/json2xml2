<project name="json2xml2" default="dist">

	<target name="clean">
		<delete dir="dist" />
	</target>

	<target name="dist" depends="clean">
		<mkdir dir="dist" />
		<zip zipfile="dist/${ant.project.name}.zip">
			<fileset excludes="bin/**, dist/**, build/**, dist.xml, files/*.xml, lib/**/*.jar" dir="."/>
		</zip>
	</target>

</project>