<project default="dist">
	<property name="name" value="json2xml2" />

	<target name="clean">
		<delete dir="dist" />
	</target>

	<target name="dist" depends="clean">
		<mkdir dir="dist" />
		<zip zipfile="dist/${name}.zip">
			<fileset excludes="bin/**, dist/**, build.xml, files/*.xml, lib/**/*.jar" dir="."/>
		</zip>
	</target>

</project>